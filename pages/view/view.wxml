<!--pages/view/view.wxml-->
<!-- 1.view 的基本使用 块级元素 是个容器 -->
<view class="box2">
   <text>{{text1}}</text>
   <button size="mini" bindtap="onclick">按钮</button>
</view>
<view class="box1">haha</view>
<!-- 2. hover-class 指定按下去的样式类。当 hover-class="none" 时，没有点击态效果 -->
<view class="box3" 
   hover-class="box3-hover" 
   hover-stay-time="0" 
   hover-start-time>
      box3
</view>
<!-- 3. hover-stop-propagation 指定是否阻止本节点的祖先节点出现点击态 -->
<view class="box4" hover-class="box4-hover">
   <view class="box3" 
      hover-class="box3-hover" 
      hover-stay-time="0" 
      hover-start-time="0"
      hover-stop-propagation>
         box3
   </view>
</view>

