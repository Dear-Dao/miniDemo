<!--pages/button/button.wxml-->
<!-- 1.button的基本属性 -->
<button>按钮</button>

<!-- 2. size 属性 ： mini-->

<button size="mini">按钮</button>\n
<!-- 3.type属性 -->
<button size="mini" type="primary">按钮绿</button>
<button size="mini" type="default">按钮白</button>
<button size="mini" type="warn">按钮红</button>

<!-- 4.plain 按钮是否镂空，背景色透明-->
<button size="mini" plain>按钮</button>

<!-- 5.plain 是否禁用-->
<button size="mini" disabled>按钮</button>
<!-- 6.loading 名称前是否带 loading 图标 -->
<button size="mini" loading="{{isloading}}">按钮</button>

<!-- 7.hover-class 指定按钮按下去的样式类。当 hover-class="none" 时，没有点击态效果 -->
<button hover-class="bj">按钮</button>