<!--pages/input/input.wxml-->
<!-- 1.input 的基本属性 -->
<input/>

<!-- 2.value 属性 -->
<input value="hahaha"/>

<!-- 3.type 属性 键盘类型 
text 	文本输入键盘 	
number 	数字输入键盘 	
idcard 	身份证输入键盘 	
digit 	带小数点的数字键盘
-->
<input type="idcard"/>

<!-- 4.password  是否是密码类型-->
<input password/>

<!-- 5. placeholder  输入框为空时占位符-->
<input placeholder="请输入内容......"/>

<!-- 6.confirm-type  
   send 	右下角按钮为“发送” 	
   search 	右下角按钮为“搜索” 	
   next 	右下角按钮为“下一个” 	
   go 	右下角按钮为“前往” 	
   done 	右下角按钮为“完成” 	
-->
<input confirm-type="search"/>

<!-- 7.绑定事件 
bindinput 键盘输入时触发，event.detail = {value, cursor, keyCode}，keyCode 为键值，2.1.0 起支持，处理函数可以直接 return 一个字符串，将替换输入框的内容。
bindfocus 输入框聚焦时触发，event.detail = { value, height }，height 为键盘高度，在基础库 1.9.90 起支持
bindblur 输入框失去焦点时触发，event.detail = {value: value}
 -->
<input
   bindinput="bindInput"
   bindfocus="bindFocus"
   bindblur="bindBlur"/>





